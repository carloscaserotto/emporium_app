<h1>Forum</h1>
<ul>
<% @posts.each do  |post| %>
<div  id="wrapper">
    <li>
        <p><strong>Title:</strong> <%= link_to "#{post.title}", post_path(post)%> | </p></li>
    <li>
        <p>
        <strong>Content:</strong> <%= post.content%> <%= post.created_at%>
        <% if current_user.email == "chino@gmail.com"%>
            <%= link_to "Edit", edit_post_path(post)%>|  
            <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to do this ?" }%>    
        <% end %>
        <span style="font-size: 10px" > Published <%= time_ago_in_words(post.created_at) %> ago</span>
        </p></li>
<% end %>
</ul>
</div>
<%= link_to "New post", new_post_path%>